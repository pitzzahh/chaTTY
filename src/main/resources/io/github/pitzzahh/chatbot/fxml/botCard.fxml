<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="600.0" styleClass="bot-message-container" stylesheets="@../styles/main.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.pitzzahh.chatbot.controllers.BotCardController">
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
   <ImageView fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
      <image>
         <Image url="@../assets/logo.png" />
      </image>
      <HBox.margin>
         <Insets right="10.0" />
      </HBox.margin>
   </ImageView>
    <Label fx:id="message" styleClass="message" stylesheets="@../styles/main.css" text="DEFAULT MESSAGE" wrapText="true" HBox.hgrow="ALWAYS" />
</HBox>
